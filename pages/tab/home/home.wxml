<!--index.wxml-->
<view class="page">

  <view class="page__bd">
    <view class="section section_gap swiper">
      <swiper indicator-dots="true" autoplay="true" interval="2000" duration="1000">
        <block wx:for="{{imgUrls}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" width="355" height="200" />
          </swiper-item>
        </block>
      </swiper>

    </view>

  </view>
</view>